using System;
using System.Collections.Generic;

namespace ConsoleApp16
{
    class Program

    {
        void karakterivostring(string zbor)
        {
            List<char> karakteri = new List<char>();
            for (int j = 0; j < zbor.Length; j++)
            {
                karakteri.Add(zbor[j]);

            }
            List<char> karakteribezpov = new List<char>();

            for (int i = 0; i < karakteri.Count; i++)
            {
                int brojac = 0;
                for (int j = 0; j < karakteribezpov.Count; j++)
                {
                    if (karakteri[i] == karakteribezpov[j])
                        brojac++;

                }
                if (brojac == 0)
                    karakteribezpov.Add(karakteri[i]);

            }
            Console.WriteLine("Stringot '" + zbor + "' se sostoi od " + zbor.Length + " karakteri tie se: ");
            for (int k = 0; k < karakteribezpov.Count; k++)
            {
                char karakter = karakteribezpov[k];
                int brojac = 0;
                for (int i = 0; i < karakteri.Count; i++)
                {
                    if (karakteri[i] == karakter)
                        brojac++;

                }
                Console.WriteLine(karakter + " " + brojac + " pati");

            }
        }
        static void Main(string[] args)
        {
            List<string> str = new List<string>() { "Marjan", "Vajdeski" };
            for (int i = 0; i < str.Count; i++)
            {
                Program obj = new Program();

                obj.karakterivostring(str[i]);

            }
        }
    }
}
